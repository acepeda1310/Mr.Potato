<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <TextView android:text="@string/sombrero" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sombrero"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:textColor="#1179db"
        android:textStyle="bold" />

    <TextView
        android:text="@string/gafas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gafas"
        android:layout_marginTop="45dp"
        android:textColor="#db1114"
        android:textStyle="bold"
        android:layout_below="@+id/sombrero"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desactivado"
        android:id="@+id/toggleButton"
        android:layout_alignBottom="@+id/sombrero"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_alignBottom="@+id/gafas"
        android:layout_alignStart="@+id/toggleButton"
        android:checked="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/potato"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>
